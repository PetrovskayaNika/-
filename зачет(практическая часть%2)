version: '3.8'

services:
  loadbalancer:
    image: nginx:latest
    ports:
      - "8080:80" 
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf 
    depends_on:
      - core-service
      - math-service

  core-service:
    build:
      context: .
      dockerfile: Dockerfile.core
    expose:
      - "80" 

  math-service:
    build:
      context: .
      dockerfile: Dockerfile.math
    expose:
      - "80" 
